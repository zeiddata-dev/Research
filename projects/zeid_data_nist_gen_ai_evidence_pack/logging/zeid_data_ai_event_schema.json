{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Zeid Data AI Telemetry Event",
  "type": "object",
  "required": [
    "event_time",
    "event_type",
    "system_id",
    "request_id",
    "model",
    "actor",
    "policy"
  ],
  "properties": {
    "event_time": {
      "type": "string",
      "format": "date-time"
    },
    "event_type": {
      "type": "string",
      "enum": [
        "request",
        "response",
        "policy_decision",
        "tool_call",
        "retrieval",
        "error"
      ]
    },
    "system_id": {
      "type": "string"
    },
    "request_id": {
      "type": "string"
    },
    "trace_id": {
      "type": "string"
    },
    "model": {
      "type": "object",
      "required": [
        "provider",
        "name"
      ],
      "properties": {
        "provider": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "actor": {
      "type": "object",
      "required": [
        "actor_type",
        "actor_id"
      ],
      "properties": {
        "actor_type": {
          "type": "string",
          "enum": [
            "user",
            "service",
            "admin"
          ]
        },
        "actor_id": {
          "type": "string"
        },
        "ip": {
          "type": "string"
        },
        "geo_country": {
          "type": "string"
        },
        "device_type": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "prompt": {
      "type": "object",
      "properties": {
        "prompt_hash": {
          "type": "string"
        },
        "prompt_length": {
          "type": "integer",
          "minimum": 0
        },
        "input_classification": {
          "type": "string"
        },
        "pii_detected": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "output": {
      "type": "object",
      "properties": {
        "output_hash": {
          "type": "string"
        },
        "output_length": {
          "type": "integer",
          "minimum": 0
        },
        "output_classification": {
          "type": "string"
        },
        "refusal": {
          "type": "boolean"
        },
        "safety_flags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "policy": {
      "type": "object",
      "required": [
        "decision"
      ],
      "properties": {
        "decision": {
          "type": "string",
          "enum": [
            "allow",
            "block",
            "redact",
            "review"
          ]
        },
        "guardrails_triggered": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "policy_version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "tools": {
      "type": "object",
      "properties": {
        "tool_calls": {
          "type": "integer",
          "minimum": 0
        },
        "tools_used": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "retrieval": {
      "type": "object",
      "properties": {
        "sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "documents_returned": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "metrics": {
      "type": "object",
      "properties": {
        "latency_ms": {
          "type": "integer",
          "minimum": 0
        },
        "cost_usd": {
          "type": "number",
          "minimum": 0
        },
        "tokens_in": {
          "type": "integer",
          "minimum": 0
        },
        "tokens_out": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "error": {
      "type": "object",
      "properties": {
        "error_type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}