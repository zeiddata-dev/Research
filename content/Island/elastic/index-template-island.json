{
  "index_patterns": [
    "island-audits-*"
  ],
  "template": {
    "settings": {
      "number_of_shards": 1
    },
    "mappings": {
      "dynamic": true,
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "event": {
          "properties": {
            "module": {
              "type": "keyword"
            },
            "dataset": {
              "type": "keyword"
            },
            "action": {
              "type": "keyword"
            }
          }
        },
        "user": {
          "properties": {
            "name": {
              "type": "keyword"
            }
          }
        },
        "observer": {
          "properties": {
            "vendor": {
              "type": "keyword"
            },
            "product": {
              "type": "keyword"
            }
          }
        },
        "island": {
          "type": "object",
          "dynamic": true
        }
      }
    }
  },
  "priority": 200
}